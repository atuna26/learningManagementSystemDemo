<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Available Forms</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Form</a></li>
                                <li class="breadcrumb-item active">Available Forms</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">Available Forms</h4>
                        </div><!-- end card header -->

                        <div class="card-body">
                            <div id="customerList">
                                <div class="row g-4 mb-3">
                                    <div class="col-sm-auto">
                                    </div>
                                    <div class="col-sm">

                                    </div>
                                </div>

                                <div class="table-responsive table-card mt-3 mb-1">
                                    <table class="table align-middle table-nowrap" id="customerTable">
                                        <thead class="table-light">
                                            <tr>
                                                <th><strong>Form Name</strong></th>
                                                <th><strong>Times sended</strong></th>
                                                <th><strong>Form Kind</strong></th>
                                                <th><strong>View Form</strong></th>
                                            </tr>
                                        </thead>
                                        <tbody class="list form-check-all">
                                            {{#each form}}
                                            {{#if (eq formFor ../userData.role)}}
                                            <tr>
                                                <td><strong>{{@index}}</strong></td>
                                                <td>{{formName}}</td>
                                                <td>2</td>
                                                <td>{{formKind}}</td>
                                                </td>
                                                <td><a href="/form/form-detail/{{_id}}"
                                                        class="badge light badge-primary">SHOW</a></td>
                                            </tr>
                                            {{/if}}
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div><!-- end card -->
                    </div>
                    <!-- end col -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

</div>