<div class="content-body" style="min-height: 862px;">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-2 p-md-0">
                <div class="welcome-text">
                    <h4>Report</h4>
                    <p class="mb-0">Weekly Report</p>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Course List</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-md">
                                <thead>
                                    <tr>
                                        <th><strong>Week</strong></th>
                                        <th><strong>Date</strong></th>
                                        <th><strong>Check</strong></th>
                                        <th><strong>Download</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each weeklyTable}}
                                    <tr>
                                        <td>{{year}} Week: {{week}} </td>
                                        <td>{{startDate}} - {{endDate}} </td>
                                        <td><a class="badge light badge-success" href="/report/student/weekly/week/?startDate={{startDate}}&endDate={{endDate}}">Check</a></td>
                                        <td><a class="badge light badge-primary" href="/report/form-reports/{{_id}}">Download</a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>